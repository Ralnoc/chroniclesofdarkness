<root>
	<windowclass name="tablesmall">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/campaign_list_record.lua" />
		<sheetdata>
			<link_list name="open">
				<class>table</class>
			</link_list>

			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right offset="-5" />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_idelete>
			<icon_access name="access" />
			<icon_modified name="modified" />

			<string_list_name name="name">
				<empty textres="table_emptyname" />
			</string_list_name>
		</sheetdata>
	</windowclass>
	
	<windowclass name="tablelist">
		<frame>campaignlist_tables</frame>
		<placement>
			<size width="350" height="450" />
		</placement>
		<sizelimits>
			<dynamic />
			<minimum width="200" height="300" />
		</sizelimits>
		<nodelete />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>table_window_title</resource>
			</windowtitlebar>
			<anchor_title_campaignlist_tables name="contentanchor" />
			
			<list_tables />
			<scrollbar_list />
			
			<anchor_campaign2 />
			<button_iedit_campaign />
			<button_iadd_campaign>
				<script file="campaign/scripts/table_add.lua" />
			</button_iadd_campaign>
			<filter_campaign />

			<categories>
				<targetcontrol>list</targetcontrol>
			</categories>
			
			<resize_campaignlist_tables />
			<close_campaignlist_tables />
		</sheetdata>
	</windowclass>
</root>
