<root version="2.0">

  <template name="desktop_stackitem">
    <windowreferencecontrol>
      <bounds>0,0,47,27</bounds>
      <nodrag />
      <closetoggle />
      <script>
        local icon = {pressed=nil,hover=nil,normal=nil};
        
        function setAllIcons(iconNormal, iconHover, iconPressed)
          icon.hover = iconHover;
          icon.normal = iconNormal;
          icon.pressed = iconPressed;
          setIcons(iconNormal,iconPressed);
        end
        
        function onHover(oncontrol)
          if oncontrol then
            setIcons(icon.hover,icon.pressed);
          else 
            setIcons(icon.normal,icon.pressed);
          end
          DesktopManager.setVisible(oncontrol);
        end
      </script>
    </windowreferencecontrol>
  </template>

